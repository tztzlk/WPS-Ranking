// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continents {
  id         String      @id
  name       String
  recordName String
  latitude   Int
  longitude  Int
  zoom       Int
  countries  Countries[]

  @@map("continents")
}

model Countries {
  id          String      @id
  name        String
  continentId String
  iso2        String?
  continent   Continents  @relation(fields: [continentId], references: [id])
  persons     Persons[]

  @@map("countries")
}

model Events {
  id           String         @id
  name         String
  rank         Int
  format       String
  cellName     String?
  ranksAverage RanksAverage[]

  @@map("events")
}

model Persons {
  id               Int            @id
  subid            Int            @default(1)
  name             String
  countryId        String
  gender           String
  competitionCount Int            @default(0)
  country          Countries      @relation(fields: [countryId], references: [id])
  ranksAverage     RanksAverage[]

  @@map("persons")
}



model RanksAverage {
  personId      Int
  eventId       String
  best          Int
  worldRank     Int
  continentRank Int?
  countryRank   Int?
  person        Persons @relation(fields: [personId], references: [id])
  event         Events  @relation(fields: [eventId], references: [id])

  @@id([personId, eventId])
  @@map("ranks_average")
}